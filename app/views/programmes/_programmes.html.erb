<table class="programmes">
  <thead>
    <tr>
      <th><%= t(".name") %></th>
      <th><%= t(".start") %></th>
      <th colspan="3"><%= t(".actions") %></th>
    </tr>
  </thead>

  <tbody class="programmes">
  <% @programmes.each do |programme| %>
    <tr>
      <td class="firstcol"><%= link_to programme.name, programme %></td>
      <td><%= programme.created_at.strftime("%a %d %b") %></td>
      <td><%= link_to "", programme, class: "button fa fa-eye" %></td>
      <td><%= link_to "", edit_programme_path(programme), class: "button fa fa-pencil" %></td>
      <td><%= link_to "", programme, method: :delete, data: { confirm: t(".confirm_delete") }, class: "button fa fa-trash" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
